{# ===== ذروة - المدونة ===== #}
{# يسحب المقالات تلقائياً من سلة #}

<section class="therwa-blog py-12">
    <div class="container">
        <div class="flex items-center justify-between mb-10">
            <div>
                <h2 class="text-2xl md:text-3xl font-bold mb-2">المدونة</h2>
                <p class="text-gray-500">مقالات ونصائح مفيدة</p>
            </div>
            <a href="/blog" class="hidden md:inline-flex items-center gap-2 px-6 py-2 rounded-lg font-semibold border-2 hover:opacity-80 transition" style="border-color: var(--color-primary); color: var(--color-primary);">
                جميع المقالات
                <i class="sicon-keyboard-arrow-left"></i>
            </a>
        </div>
        
        <div class="grid md:grid-cols-3 gap-6">
            {% for article in articles|slice(0, 3) %}
            <article class="bg-white rounded-2xl overflow-hidden shadow-sm border border-gray-100 hover:shadow-lg transition group">
                <div class="aspect-video overflow-hidden bg-gray-100">
                    {% if article.image %}
                    <a href="{{ article.url }}">
                        <img src="{{ article.image }}" alt="{{ article.title }}" class="w-full h-full object-cover group-hover:scale-105 transition duration-500">
                    </a>
                    {% else %}
                    <div class="w-full h-full flex items-center justify-center" style="background-color: var(--color-primary); opacity: 0.1;">
                        <i class="sicon-file-text text-4xl"></i>
                    </div>
                    {% endif %}
                </div>
                <div class="p-5">
                    <div class="flex items-center gap-4 text-sm text-gray-400 mb-3">
                        <span><i class="sicon-calendar ml-1"></i> {{ article.created_at|date('d M Y') }}</span>
                    </div>
                    <a href="{{ article.url }}">
                        <h3 class="font-bold text-lg mb-3 line-clamp-2 hover:opacity-80 transition" style="color: var(--color-primary);">{{ article.title }}</h3>
                    </a>
                    {% if article.excerpt %}
                    <p class="text-gray-500 text-sm line-clamp-2 mb-4">{{ article.excerpt }}</p>
                    {% endif %}
                    <a href="{{ article.url }}" class="inline-flex items-center gap-2 text-sm font-semibold" style="color: var(--color-primary);">
                        اقرأ المزيد
                        <i class="sicon-keyboard-arrow-left"></i>
                    </a>
                </div>
            </article>
            {% else %}
            <div class="col-span-full text-center py-12 text-gray-500">
                <i class="sicon-file-text text-4xl mb-4 block opacity-50"></i>
                <p>لا توجد مقالات حالياً</p>
            </div>
            {% endfor %}
        </div>
        
        <div class="text-center mt-8 md:hidden">
            <a href="/blog" class="inline-flex items-center gap-2 px-6 py-3 rounded-lg font-semibold text-white" style="background-color: var(--color-primary);">
                عرض جميع المقالات
            </a>
        </div>
    </div>
</section>
