{# ===== ذروة - منتجات مميزة ===== #}
<section class="therwa-featured-products py-12">
    <div class="container">
        {# Section Header #}
        <div class="flex items-center justify-between mb-8">
            <div>
                <h2 class="text-2xl md:text-3xl font-bold mb-2" style="color: {{ theme.color.primary }};">
                    {{ component.title|default('اكتشف مجموعتنا المختارة') }}
                </h2>
                {% if component.subtitle %}
                <p class="text-gray-500">{{ component.subtitle }}</p>
                {% endif %}
            </div>
            <a href="/products" class="hidden md:inline-flex items-center gap-2 px-6 py-2 rounded-lg font-semibold transition-all hover:scale-105" style="border: 2px solid {{ theme.color.primary }}; color: {{ theme.color.primary }};">
                عرض الكل
                <i class="sicon-keyboard-arrow-left"></i>
            </a>
        </div>
        
        {# Products Grid #}
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
            {% for product in products.featured|slice(0, component.limit|default(8)) %}
            <div class="product-card bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow group" style="border: 1px solid {{ theme.color.lighter(0.9) }};">
                {# Product Image #}
                <div class="relative aspect-square overflow-hidden" style="background-color: {{ theme.color.lighter(0.95) }};">
                    <a href="{{ product.url }}">
                        <img src="{{ product.image.url }}" alt="{{ product.name }}" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105">
                    </a>
                    
                    {# Badges #}
                    <div class="absolute top-3 right-3 flex flex-col gap-2">
                        {% if product.discount_percentage %}
                        <span class="px-2 py-1 rounded-full text-xs font-bold text-white" style="background-color: #EF4444;">
                            -{{ product.discount_percentage }}%
                        </span>
                        {% endif %}
                        {% if product.is_new %}
                        <span class="px-2 py-1 rounded-full text-xs font-bold text-white" style="background-color: #10B981;">
                            جديد
                        </span>
                        {% endif %}
                    </div>
                    
                    {# Wishlist Button #}
                    <button class="absolute top-3 left-3 w-9 h-9 rounded-full bg-white shadow-md flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity hover:bg-gray-100">
                        <i class="sicon-heart text-gray-400 hover:text-red-500"></i>
                    </button>
                    
                    {# Add to Cart #}
                    <div class="absolute bottom-0 left-0 right-0 p-3 translate-y-full group-hover:translate-y-0 transition-transform">
                        <button onclick="salla.cart.addItem({{ product.id }})" class="w-full py-3 rounded-xl text-sm font-bold text-white transition-all hover:opacity-90" style="background-color: {{ theme.color.primary }};">
                            <i class="sicon-shopping-bag ml-2"></i>
                            أضف للسلة
                        </button>
                    </div>
                </div>
                
                {# Product Info #}
                <div class="p-4">
                    {# Rating #}
                    {% if product.rating %}
                    <div class="flex items-center gap-1 mb-2">
                        {% for i in 1..5 %}
                        <i class="sicon-star text-xs {{ i <= product.rating ? 'text-yellow-400' : 'text-gray-300' }}"></i>
                        {% endfor %}
                        <span class="text-xs text-gray-400 mr-1">({{ product.reviews_count|default(0) }})</span>
                    </div>
                    {% endif %}
                    
                    <a href="{{ product.url }}" class="block">
                        <h3 class="font-semibold text-gray-800 mb-2 line-clamp-2 hover:text-primary transition-colors text-sm md:text-base">
                            {{ product.name }}
                        </h3>
                    </a>
                    
                    <div class="flex items-center gap-2 flex-wrap">
                        <span class="text-lg font-bold" style="color: {{ theme.color.primary }};">{{ product.price }}</span>
                        {% if product.regular_price != product.price %}
                        <span class="text-sm text-gray-400 line-through">{{ product.regular_price }}</span>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% else %}
            {# Default products #}
            {% for i in 1..8 %}
            <div class="product-card bg-white rounded-2xl overflow-hidden shadow-sm" style="border: 1px solid {{ theme.color.lighter(0.9) }};">
                <div class="aspect-square" style="background-color: {{ theme.color.lighter(0.95) }};"></div>
                <div class="p-4">
                    <h3 class="font-semibold text-gray-800 mb-2">منتج {{ i }}</h3>
                    <span class="text-lg font-bold" style="color: {{ theme.color.primary }};">99 ر.س</span>
                </div>
            </div>
            {% endfor %}
            {% endfor %}
        </div>
        
        {# Mobile View All Button #}
        <div class="text-center mt-8 md:hidden">
            <a href="/products" class="inline-flex items-center gap-2 px-6 py-3 rounded-lg font-semibold" style="background-color: {{ theme.color.primary }}; color: {{ theme.color.reverse_text }};">
                عرض جميع المنتجات
                <i class="sicon-keyboard-arrow-left"></i>
            </a>
        </div>
    </div>
</section>
