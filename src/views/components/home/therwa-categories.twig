{# ===== ذروة - الأقسام ===== #}
{# هذا العنصر يسحب الأقسام تلقائياً من سلة #}

<section class="therwa-categories py-12">
    <div class="container">
        <div class="text-center mb-10">
            <h2 class="text-2xl md:text-3xl font-bold mb-3">تسوق حسب الفئة</h2>
            <p class="text-gray-500">اختر القسم المناسب لك</p>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
            {% for category in categories %}
                <a href="{{ category.url }}" class="group relative overflow-hidden rounded-2xl aspect-square block">
                    <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent z-10"></div>
                    {% if category.image.url %}
                        <img src="{{ category.image.url }}" alt="{{ category.name }}" class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
                    {% else %}
                        <div class="absolute inset-0" style="background-color: var(--color-primary);"></div>
                    {% endif %}
                    <div class="absolute bottom-4 right-4 left-4 z-20">
                        <h3 class="text-lg font-bold text-white">{{ category.name }}</h3>
                        {% if category.products_count %}
                        <span class="text-sm text-white/70">{{ category.products_count }} منتج</span>
                        {% endif %}
                    </div>
                </a>
            {% else %}
                <p class="col-span-full text-center text-gray-500">لا توجد أقسام حالياً</p>
            {% endfor %}
        </div>
        
        <div class="text-center mt-8">
            <a href="/categories" class="inline-flex items-center gap-2 px-6 py-3 rounded-lg font-semibold transition hover:opacity-90" style="background-color: var(--color-primary); color: white;">
                عرض جميع الأقسام
                <i class="sicon-keyboard-arrow-left"></i>
            </a>
        </div>
    </div>
</section>
