{# ===== ذروة - بانر عريض ===== #}
<section class="therwa-wide-banner py-12">
    <div class="container">
        <div class="banner-wrapper relative overflow-hidden rounded-3xl min-h-[300px] md:min-h-[400px] flex items-center" style="background: linear-gradient(135deg, {{ theme.color.primary }} 0%, {{ theme.color.darker(0.2) }} 100%);">
            
            {# Background Image #}
            {% if component.image %}
            <div class="absolute inset-0">
                <img src="{{ component.image }}" alt="{{ component.title }}" class="w-full h-full object-cover opacity-40">
            </div>
            {% endif %}
            
            {# Pattern Overlay #}
            <div class="absolute inset-0 opacity-10" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23ffffff\' fill-opacity=\'0.4\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
            
            <div class="container relative z-10">
                <div class="grid md:grid-cols-2 gap-8 items-center">
                    <div class="text-center md:text-right">
                        {% if component.badge %}
                        <span class="inline-block px-4 py-2 rounded-full text-sm font-medium mb-4" style="background-color: rgba(255,255,255,0.2); color: {{ theme.color.reverse_text }};">
                            {{ component.badge }}
                        </span>
                        {% endif %}
                        
                        <h2 class="text-3xl md:text-4xl lg:text-5xl font-black mb-4 leading-tight" style="color: {{ theme.color.reverse_text }};">
                            {{ component.title|default('مجموعة البصريات الفاخرة') }}
                        </h2>
                        
                        {% if component.description %}
                        <p class="text-lg mb-8 leading-relaxed" style="color: rgba(255,255,255,0.85);">
                            {{ component.description }}
                        </p>
                        {% endif %}
                        
                        {% if component.button_text and component.button_url %}
                        <a href="{{ component.button_url }}" class="inline-flex items-center gap-2 px-8 py-4 rounded-xl font-bold text-lg transition-all hover:scale-105" style="background-color: #FFFFFF; color: {{ theme.color.primary }};">
                            {{ component.button_text }}
                            <i class="sicon-keyboard-arrow-left"></i>
                        </a>
                        {% endif %}
                    </div>
                    
                    {# Optional Product Image #}
                    {% if component.product_image %}
                    <div class="hidden md:block">
                        <img src="{{ component.product_image }}" alt="" class="max-h-[350px] mx-auto drop-shadow-2xl">
                    </div>
                    {% endif %}
                </div>
            </div>
            
            {# Decorative Elements #}
            <div class="absolute -bottom-20 -left-20 w-64 h-64 rounded-full opacity-20" style="background-color: {{ theme.color.reverse_text }};"></div>
            <div class="absolute -top-10 -right-10 w-40 h-40 rounded-full opacity-10" style="background-color: {{ theme.color.reverse_text }};"></div>
        </div>
    </div>
</section>
