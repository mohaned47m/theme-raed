{# ===== ذروة - الأقسام/التصنيفات ===== #}
<section class="therwa-categories py-12">
    <div class="container">
        {# Section Header #}
        <div class="text-center mb-10">
            <h2 class="text-2xl md:text-3xl font-bold mb-3" style="color: {{ theme.color.primary }};">
                {{ component.title|default('تسوق حسب الفئة') }}
            </h2>
            {% if component.subtitle %}
            <p class="text-gray-500">{{ component.subtitle }}</p>
            {% endif %}
        </div>
        
        {# Categories Grid #}
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
            {% for category in categories|slice(0, component.limit|default(5)) %}
            <a href="{{ category.url }}" class="category-card group relative overflow-hidden rounded-2xl aspect-square flex items-end p-4 transition-transform hover:scale-[1.02]">
                {# Background Image #}
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent z-10"></div>
                {% if category.image %}
                <img src="{{ category.image }}" alt="{{ category.name }}" class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
                {% else %}
                <div class="absolute inset-0" style="background-color: {{ theme.color.primary }};"></div>
                {% endif %}
                
                {# Category Name #}
                <div class="relative z-20 w-full">
                    <h3 class="text-lg font-bold text-white mb-1">{{ category.name }}</h3>
                    <span class="text-sm text-white/70">{{ category.products_count|default(0) }} منتج</span>
                </div>
            </a>
            {% else %}
            {# Default categories if none exist #}
            {% for i in 1..5 %}
            <div class="category-card relative overflow-hidden rounded-2xl aspect-square flex items-end p-4" style="background-color: {{ theme.color.lighter(0.9) }};">
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent z-10"></div>
                <div class="relative z-20">
                    <h3 class="text-lg font-bold text-white">قسم {{ i }}</h3>
                </div>
            </div>
            {% endfor %}
            {% endfor %}
        </div>
        
        {# View All Button #}
        {% if component.show_all_button %}
        <div class="text-center mt-8">
            <a href="/categories" class="inline-flex items-center gap-2 px-6 py-3 rounded-lg font-semibold transition-all hover:scale-105" style="background-color: {{ theme.color.primary }}; color: {{ theme.color.reverse_text }};">
                عرض جميع الأقسام
                <i class="sicon-keyboard-arrow-left"></i>
            </a>
        </div>
        {% endif %}
    </div>
</section>
