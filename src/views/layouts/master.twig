{% endif %}

<style>
@import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;500;600;700;800;900&display=swap');

/* ===== Base ===== */
body, body * { font-family: 'Cairo', sans-serif !important; }
body { background: #FFFFFF !important; }

/* ===== Header & Top Bar - Brand Color ===== */
.store-header, .store-header > div, #mainnav, #mainnav > div, 
.main-nav-container, .main-nav-container > div, .main-nav-container .inner,
.top-bar { 
    background-color: {{ theme.color.primary }} !important; 
}

/* Header Text */
.store-header a, .store-header span, #mainnav a, #mainnav span,
.main-nav-container a, .main-nav-container span,
custom-main-menu, custom-main-menu a, custom-main-menu span, 
.navbar-brand span { 
    color: {{ theme.color.reverse_text }} !important; 
}

/* Dropdown */
.s-menu-dropdown, .s-menu-dropdown > *, .dropdown-menu, .dropdown-menu > * { 
    background-color: {{ theme.color.primary }} !important; 
}
.s-menu-dropdown a, .s-menu-dropdown span, .dropdown-menu a, .dropdown-menu span { 
    color: {{ theme.color.reverse_text }} !important; 
}

/* ===== Footer - Brand Color ===== */
footer, footer > *, .footer, .footer > *, .site-footer, .site-footer > * { 
    background-color: {{ theme.color.primary }} !important; 
}
footer, footer *, .footer, .footer *, .site-footer, .site-footer * { 
    color: {{ theme.color.reverse_text }} !important; 
}

/* ===== Buttons - Brand Color ===== */
.s-button-primary, .btn--primary, .btn-primary { 
    background-color: {{ theme.color.primary }} !important; 
    border-color: {{ theme.color.primary }} !important;
    color: {{ theme.color.reverse_text }} !important;
}

/* ===== WhatsApp Animation ===== */
.whatsapp-float:hover { transform: scale(1.1); }
@keyframes pulse { 0%, 100% { box-shadow: 0 4px 15px rgba(37,211,102,0.4); } 50% { box-shadow: 0 4px 25px rgba(37,211,102,0.6); } }
.whatsapp-float { animation: pulse 2s infinite; }
</style>
</body>
</html>
