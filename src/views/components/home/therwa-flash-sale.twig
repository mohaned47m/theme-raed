{# ===== ذروة - عروض الفلاش ===== #}
<section class="py-12" style="background-color: var(--color-primary);">
    <div class="container">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6 mb-8">
            <div>
                <h2 class="text-2xl md:text-3xl font-bold text-white">⚡ عروض الفلاش الحصرية</h2>
            </div>
            <div class="flex items-center gap-2">
                <span class="text-white/80 text-sm">ينتهي خلال:</span>
                <div class="flex gap-2">
                    <div class="bg-white/20 px-3 py-2 rounded-lg text-center">
                        <span class="block text-xl font-bold text-white" id="fd">00</span>
                        <span class="text-xs text-white/70">يوم</span>
                    </div>
                    <div class="bg-white/20 px-3 py-2 rounded-lg text-center">
                        <span class="block text-xl font-bold text-white" id="fh">00</span>
                        <span class="text-xs text-white/70">ساعة</span>
                    </div>
                    <div class="bg-white/20 px-3 py-2 rounded-lg text-center">
                        <span class="block text-xl font-bold text-white" id="fm">00</span>
                        <span class="text-xs text-white/70">دقيقة</span>
                    </div>
                    <div class="bg-white/20 px-3 py-2 rounded-lg text-center">
                        <span class="block text-xl font-bold text-white" id="fs">00</span>
                        <span class="text-xs text-white/70">ثانية</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            {% for product in products|slice(0, 4) %}
            <div class="bg-white rounded-2xl overflow-hidden shadow-lg">
                <div class="aspect-square overflow-hidden">
                    <a href="{{ product.url }}">
                        <img src="{{ product.image.url }}" alt="{{ product.name }}" class="w-full h-full object-cover hover:scale-105 transition duration-500">
                    </a>
                </div>
                <div class="p-4">
                    <h3 class="font-semibold text-gray-800 mb-2 line-clamp-2">{{ product.name }}</h3>
                    <span class="text-lg font-bold" style="color: var(--color-primary);">{{ product.price }}</span>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
<script>
(function(){var e=new Date;e.setDate(e.getDate()+3);setInterval(function(){var t=e-new Date;t>0&&(document.getElementById("fd").textContent=Math.floor(t/864e5).toString().padStart(2,"0"),document.getElementById("fh").textContent=Math.floor(t%864e5/36e5).toString().padStart(2,"0"),document.getElementById("fm").textContent=Math.floor(t%36e5/6e4).toString().padStart(2,"0"),document.getElementById("fs").textContent=Math.floor(t%6e4/1e3).toString().padStart(2,"0"))},1e3)})();
</script>
