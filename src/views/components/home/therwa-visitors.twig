{% if theme.settings.get('enable_visitors', true) %}
<div class="therwa-visitors py-4">
    <div class="container">
        <div class="flex items-center justify-center gap-3 p-4 rounded-lg" style="background-color: #FEF3C7; border: 1px solid #F59E0B;">
            <span class="w-3 h-3 rounded-full" style="background-color: #EF4444; animation: pulse 2s infinite;"></span>
            <span class="text-sm font-semibold" style="color: #92400E;"><span id="visitor-count">{{ theme.settings.get('visitors_min', 5) }}</span> شخص يشاهدون هذا المنتج الآن</span>
        </div>
    </div>
</div>
<script>
(function(){var min={{ theme.settings.get('visitors_min', 5) }},max={{ theme.settings.get('visitors_max', 25) }},el=document.getElementById('visitor-count');if(el){setInterval(function(){el.textContent=Math.floor(Math.random()*(max-min+1))+min;},Math.random()*4000+3000);}})();
</script>
<style>@keyframes pulse{0%,100%{opacity:1}50%{opacity:.5}}</style>
{% endif %}
