{# ===== ذروة - المدونة ===== #}
<section class="py-12">
    <div class="container">
        <div class="flex items-center justify-between mb-10">
            <div>
                <h2 class="text-2xl md:text-3xl font-bold mb-2">المدونة</h2>
                <p class="text-gray-500">مقالات متخصصة ونصائح</p>
            </div>
            <a href="/blog" class="hidden md:inline-flex items-center gap-2 px-6 py-2 rounded-lg font-semibold border-2 hover:bg-gray-50" style="border-color: var(--color-primary); color: var(--color-primary);">
                جميع المقالات
            </a>
        </div>
        <div class="grid md:grid-cols-3 gap-6">
            {% for article in articles|slice(0, 3) %}
            <article class="bg-white rounded-2xl overflow-hidden shadow-sm border border-gray-100 hover:shadow-lg transition">
                <div class="aspect-video overflow-hidden bg-gray-100">
                    {% if article.image %}
                    <img src="{{ article.image }}" alt="{{ article.title }}" class="w-full h-full object-cover hover:scale-105 transition duration-500">
                    {% endif %}
                </div>
                <div class="p-5">
                    <div class="flex items-center gap-4 text-sm text-gray-400 mb-3">
                        <span><i class="sicon-calendar ml-1"></i> {{ article.date }}</span>
                    </div>
                    <h3 class="font-bold text-lg mb-3 line-clamp-2" style="color: var(--color-primary);">{{ article.title }}</h3>
                    <a href="{{ article.url }}" class="inline-flex items-center gap-2 text-sm font-semibold" style="color: var(--color-primary);">
                        اقرأ المزيد
                        <i class="sicon-keyboard-arrow-left"></i>
                    </a>
                </div>
            </article>
            {% else %}
            <article class="bg-white rounded-2xl overflow-hidden shadow-sm border border-gray-100">
                <div class="aspect-video bg-gray-100"></div>
                <div class="p-5">
                    <div class="flex items-center gap-4 text-sm text-gray-400 mb-3">
                        <span><i class="sicon-calendar ml-1"></i> 15 يناير 2025</span>
                    </div>
                    <h3 class="font-bold text-lg mb-3" style="color: var(--color-primary);">دليل المبتدئين لاختيار أول دربيل</h3>
                    <span class="inline-flex items-center gap-2 text-sm font-semibold" style="color: var(--color-primary);">
                        اقرأ المزيد
                    </span>
                </div>
            </article>
            <article class="bg-white rounded-2xl overflow-hidden shadow-sm border border-gray-100">
                <div class="aspect-video bg-gray-100"></div>
                <div class="p-5">
                    <div class="flex items-center gap-4 text-sm text-gray-400 mb-3">
                        <span><i class="sicon-calendar ml-1"></i> 15 يناير 2025</span>
                    </div>
                    <h3 class="font-bold text-lg mb-3" style="color: var(--color-primary);">أساسيات تحضير شنطة الطوارئ</h3>
                    <span class="inline-flex items-center gap-2 text-sm font-semibold" style="color: var(--color-primary);">
                        اقرأ المزيد
                    </span>
                </div>
            </article>
            <article class="bg-white rounded-2xl overflow-hidden shadow-sm border border-gray-100">
                <div class="aspect-video bg-gray-100"></div>
                <div class="p-5">
                    <div class="flex items-center gap-4 text-sm text-gray-400 mb-3">
                        <span><i class="sicon-calendar ml-1"></i> 15 يناير 2025</span>
                    </div>
                    <h3 class="font-bold text-lg mb-3" style="color: var(--color-primary);">أفضل 5 أماكن للتخييم</h3>
                    <span class="inline-flex items-center gap-2 text-sm font-semibold" style="color: var(--color-primary);">
                        اقرأ المزيد
                    </span>
                </div>
            </article>
            {% endfor %}
        </div>
    </div>
</section>
