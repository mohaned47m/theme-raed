{# ===== ذروة - الأقسام ===== #}
<section class="py-12">
    <div class="container">
        <div class="text-center mb-10">
            <h2 class="text-2xl md:text-3xl font-bold mb-3">تسوق حسب الفئة</h2>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
            {% for category in categories|slice(0, 5) %}
            <a href="{{ category.url }}" class="group relative overflow-hidden rounded-2xl aspect-square">
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent z-10"></div>
                {% if category.image %}
                <img src="{{ category.image }}" alt="{{ category.name }}" class="absolute inset-0 w-full h-full object-cover group-hover:scale-110 transition duration-500">
                {% else %}
                <div class="absolute inset-0 bg-gray-200"></div>
                {% endif %}
                <div class="absolute bottom-4 right-4 z-20">
                    <h3 class="text-lg font-bold text-white">{{ category.name }}</h3>
                </div>
            </a>
            {% endfor %}
        </div>
    </div>
</section>
