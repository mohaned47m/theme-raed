{% set important_links = theme.settings.get('important_links') %}

{# ===== Top Bar ===== #}
<div style="background-color: #1e1a18; padding: 8px 0; font-size: 12px; color: #94a3b8; border-bottom: 1px solid rgba(255,255,255,0.05);">
    <div class="container flex justify-between items-center">
        <div class="flex items-center gap-6">
            {% if store.settings.is_multilingual or store.settings.currencies_enabled %}
                <button type="button" onclick="salla.event.dispatch('localization::open')" class="flex items-center gap-2 hover:text-white transition-colors">
                    <i class="sicon-globe"></i>
                    <span>{{ user.language.name }}</span>
                </button>
                <salla-localization-modal></salla-localization-modal>
            {% endif %}
            <a href="/orders" class="flex items-center gap-2 hover:text-white transition-colors">
                <i class="sicon-shipping-fast"></i>
                <span>تتبع طلبك</span>
            </a>
        </div>
        <div class="hidden md:flex items-center gap-4">
            <span style="color: #87602C;">خبرة أكثر من 10 سنوات</span>
            <span class="h-3 w-px bg-white/20"></span>
            <span>معدات احترافية موثوقة</span>
        </div>
    </div>
</div>

{# ===== Main Header ===== #}
<header class="store-header" style="background-color: #2F2824 !important;">
  <div id="mainnav" class="main-nav-container shadow-default flex items-center" style="background-color: #2F2824 !important;">
      <div class="inner w-full" style="background-color: #2F2824 !important;">
          <div class="container">
              <div class="flex items-stretch justify-between relative py-3">
                  <div class="flex items-center">
                      <a class="lg:hidden mburger mburger--collapse leading-none rtl:ml-4 ltr:mr-4 text-white" href="#mobile-menu" aria-label="Open-menu">
                        <i class="sicon-menu text-2xl"></i>
                      </a>
                      <a class="navbar-brand flex items-center gap-3" href="{{ store.url }}">
                          <img fetchpriority="high" width="100%" height="100%" loading="eager" src="{{ store.logo|cdn(175) }}" alt="{{ store.name }} logo" class="h-10">
                          <div class="hidden sm:flex flex-col">
                              <span class="text-lg font-black text-white">{{ store.name }}</span>
                              <span style="font-size: 10px; color: #87602C; text-transform: uppercase; letter-spacing: 0.1em;">الهوية الأصلية</span>
                          </div>
                      </a>
                      {% if is_page('index') %}
                        <h1 class="sr-only">{{ store.name }}</h1>
                      {% else %}
                        <h2 class="sr-only">{{ store.name }}</h2>
                      {% endif %}
                      <custom-main-menu class="text-white"></custom-main-menu>
                  </div>
                  
                  {# Search #}
                  <div class="flex-1 max-w-xl mx-8 hidden lg:block">
                      <salla-search inline></salla-search>
                  </div>
                  
                  <div class="flex items-center justify-end gap-3">
                      {% if user.type=='user' %}
                        <salla-user-menu avatar-only show-header class="text-white"></salla-user-menu>
                      {% else %}
                          <button class="p-2.5 rounded-lg text-white hover:bg-white/10" style="background-color: rgba(255,255,255,0.05);" aria-label="user-icon" onclick="salla.event.dispatch('login::open')">
                            <i class="sicon-user-circle text-xl"></i>
                          </button>
                      {% endif %}
                      
                      <a href="/wishlist" class="p-2.5 rounded-lg text-white hover:bg-white/10 hidden sm:flex" style="background-color: rgba(255,255,255,0.05);">
                          <i class="sicon-heart text-xl"></i>
                      </a>
                      
                      <salla-cart-summary style="background-color: #87602C; padding: 10px; border-radius: 8px;">
                        <i slot="icon" class="sicon-shopping-bag text-xl text-white"></i>
                      </salla-cart-summary>
                  </div>
              </div>
          </div>
      </div>
  </div>
</header>
